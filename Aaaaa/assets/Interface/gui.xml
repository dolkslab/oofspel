<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <useStyles filename="nifty-default-styles.xml" />
    <useControls filename="nifty-default-controls.xml" />

    <screen id="select" controller="gui.InterfaceController">
        <layer childLayout="vertical">
            <panel id="panel" height="20%" width="20%" align="right" childLayout="vertical" visibleToMouse="true" backgroundColor="#ff0000">
                <control id="hideButton" name="button" label="hide" align="right" width="50%"/>
                <panel id="mass" height="40%" width="100%" align="left"  childLayout="vertical" visibleToMouse="true" backgroundColor="#ffff00">
                    <control id="sliderMass" name="horizontalSlider" width="100%" height="50%" align = "left"  max="10" min="0.1" stepSize="0.05" buttonStepSize="0.5" initial="5.0" />
                    <control id="iputMass" name="textfield" width="100px" align="left" height="40%" valign="bottom" text="0"/>
                </panel>
                <panel id="vel" height="40%" width="100%" align="left"  childLayout="vertical" visibleToMouse="true" backgroundColor="#ffff00">
                    <control id="sliderVel" name="horizontalSlider" width="100%" height="50%" align = "left"  max="2" stepSize="0.05" buttonStepSize="0.5" initial="1.0"/>
                    <control id="iputVel" name="textfield" width="100px" align="left" height="40%" valign="bottom" text="0"/>
                </panel>
                
            </panel>
        </layer>
    </screen> 
    
    <screen id="start" controller="gui.InterfaceController">
      <layer id="baseLayer" childLayout="vertical">
          <panel id="startpanel" height="3%" width="10%" align="right" childLayout="vertical" visibleToMouse="true">
              <control id="editButton" name="button" label="edit" align = "right" width="100%"/>
          </panel>
      </layer>
    </screen>     
</nifty>